---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts, getPickupPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
const pickupPosts = await getPickupPosts()

const videoIds = ['DZRH4pQHHjo', 'SBEc_uhhRFg', 'vpCFuivt5EA']
---

<Layout class="max-w-5xl mx-auto px-4">
  <section class="text-center py-20 sm:py-32">
    <div class="relative">
      <h1
        class="text-5xl md:text-7xl font-bold tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-400"
      >
        lineside
      </h1>
      <p class="mt-6 max-w-2xl mx-auto text-lg text-muted-foreground">
        linesideのブログです。<br>日常の何気ない出来事から、技術的な事まで幅広く発信しています。
      </p>
    </div>
  </section>

  {/* PickUp Posts セクション */}
  <section class="mb-16">
    <h2 class="text-3xl font-bold tracking-tight text-center mb-10 flex items-center justify-center">
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 mr-4"></span>
      <span class="flex flex-col items-center">
        <span class="text-xs font-light tracking-widest text-muted-foreground">注目の記事</span>
        Pick Up Posts
      </span>
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 ml-4"></span>
    </h2>

    {pickupPosts.length > 0 ? (
      <ul class="space-y-4">
        {pickupPosts.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))}
      </ul>
    ) : (
      <div class="text-center text-muted-foreground">
        <p>現在ピックアップ記事はありません。</p>
        <p class="text-sm">No featured posts at the moment.</p>
      </div>
    )}
  </section>

  {/* Recent Posts セクション */}
  <section class="mb-16">
    <h2 class="text-3xl font-bold tracking-tight text-center mb-10 flex items-center justify-center">
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 mr-4"></span>
      <span class="flex flex-col items-center">
        <span class="text-xs font-light tracking-widest text-muted-foreground">最新の記事</span>
        Recent Posts
      </span>
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 ml-4"></span>
    </h2>

    <ul class="space-y-4">
      {blog.map((post) => (
        <li>
          <BlogCard entry={post} />
        </li>
      ))}
    </ul>

    <div class="flex justify-center mt-8">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'outline' }) +
          ' group border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground'}
      >
        See All Posts
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </Link>
    </div>
  </section>

  {/* Videos セクション */}
  <section class="mb-16">
    <h2 class="text-3xl font-bold tracking-tight text-center mb-10 flex items-center justify-center">
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 mr-4"></span>
      <span class="flex flex-col items-center">
        <span class="text-xs font-light tracking-widest text-muted-foreground">動画</span>
        Videos
      </span>
      <span class="w-8 h-px bg-gray-300 dark:bg-gray-600 ml-4"></span>
    </h2>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {videoIds.map((id) => (
        <div class="aspect-video overflow-hidden rounded-xl border dark:border-gray-800 shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105">
          <iframe
            class="w-full h-full"
            src={`https://www.youtube.com/embed/${id}`}
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          >
          </iframe>
        </div>
      ))}
    </div>
  </section>
</Layout>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }

  .animation-delay-2000 { animation-delay: 2s; }
</style>
